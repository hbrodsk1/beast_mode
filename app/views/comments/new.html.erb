<div class="form-container container col-md-8 col-md-offset-2">
	<%= form_for @comment, html: {class: "new-comment-form"} do |f| %>
			<%= f.hidden_field :outlet_id, value: @outlet.id %>
			<%= f.hidden_field :user_id, value: current_user.id %>
		
			<div class="row form-row comment-body-container col-md-12">
				<%= f.label :body, "Comment" %>
				<%= f.text_area :body, size: "60x6", placeholder: "Tell them how you really feel...", class: "form-control" %>
			</div>

			<div class="row form-row col-md-12">
				<%= f.submit "Submit", id: "comment-submit-button", class: "btn btn-success" %>
			</div>
	<% end %>
</div>